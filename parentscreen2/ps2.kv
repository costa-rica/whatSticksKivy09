<ParentScreen2>
  name:"parent_screen_2"
  toolbar: toolbar
  btn_font_size: btn_font_size
  md_nav_layout: md_nav_layout
  child_sm: child_sm
  act_screen: act_screen
  table_screen: table_screen
  nav_menu: nav_menu
  nav_drawer: nav_drawer

  MDToolbar:
    id:toolbar
    pos_hint:{"top":1}
    title:"What-Sticks"
    left_action_items:[["menu", lambda x: nav_drawer.set_state("open")]]
    md_bg_color: .3,.3,.3,1
    AnchorLayout:
      padding: 5
      anchor_x:"right"
      Button:
        id: btn_font_size
        text:"Font Size"
        size_hint:.5,1
        on_press: root.change_app_size()
        # elevation:40
        # background_color: .3,.8,.3,1
        background_color: .3,.3,.3,1
        # color: 1,.2,.2,1
        # border:15,15,15,15

  MDNavigationLayout:
    id:md_nav_layout

    ScreenManager:
      id:child_sm
      ActivityScreen:
        id: act_screen
        name: "act_screen"
        size_hint: 1,None
        height: root.height - root.toolbar.height
      Screen:
        id: table_screen
        name: "table_screen"
        size_hint: 1,None
        height: root.height - root.toolbar.height
        TableBox:
    MDNavigationDrawer:
      id:nav_drawer
      size_hint:.5, None
      height:root.height - root.toolbar.height
      on_motion: print(self.x)

      NavMenu:
        id: nav_menu


<ActivityScreen@Screen>
  ScrollView:
    BoxLayout:
      orientation:"vertical"
      size_hint:1,None
      height:self.minimum_height

      MainBoxLayout:
        size_hint:1,None
        height:root.height

      BoxLayout:# ExtraBoxLayout
        size_hint:1,None
        height:root.height *.5



<NavMenu>
  anchor_act_screen_label: anchor_act_screen_label
  label_act_screen: label_act_screen
  anchor_table_screen_label: anchor_table_screen_label
  label_table_screen: label_table_screen
  anchor_wsh_web_label: anchor_wsh_web_label
  label_wsh_web: label_wsh_web
  anchor_exit_label: anchor_exit_label
  label_exit: label_exit
  anchor_version: anchor_version
  label_version: label_version

  orientation:"vertical"

  canvas.before:
    Color:
      rgb:127/255,160/255,189/255
    Rectangle:
      pos: self.pos
      size: self.size

  AnchorClickable_nav:
    id: anchor_act_screen_label
    canvas.before:
      Color:
        rgba:.1,.1,.1,.1
      Rectangle:
        pos: self.pos[0]+3,self.pos[1]
        size: self.width - 6, 2
    Label:
      id: label_act_screen
      text: "Add Activity"

  AnchorClickable_nav:
    id: anchor_table_screen_label
    canvas.before:
      Color:
        rgba:.1,.1,.1,.1
      Rectangle:
        pos: self.pos[0]+3,self.pos[1]
        size: self.width - 6, 2
    Label:
      id: label_table_screen

  AnchorClickable_nav:
    id: anchor_wsh_web_label
    canvas.before:
      Color:
        rgba:.1,.1,.1,.1
      Rectangle:
        pos: self.pos[0]+3,self.pos[1]
        size: self.width - 6, 2
    Label:
      id: label_wsh_web

  AnchorClickable_nav:
    id: anchor_exit_label
    canvas.before:
      Color:
        rgba:.1,.1,.1,.1
      Rectangle:
        pos: self.pos[0]+3,self.pos[1]
        size: self.width - 6, 2
    Label:
      id: label_exit

  AnchorLayout:
    id: anchor_version
    Label:
      id: label_version

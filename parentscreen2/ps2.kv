<ParentScreen2>
  name:"parent_screen_2"
  toolbar: toolbar
  btn_font_size: btn_font_size
  md_nav_layout: md_nav_layout
  child_sm: child_sm
  act_screen: act_screen
  table_screen: table_screen
  navmenu: navmenu
  nav_drawer: nav_drawer

  MDToolbar:
    id:toolbar
    pos_hint:{"top":1}
    title:"What-Sticks"
    left_action_items:[["menu", lambda x: nav_drawer.set_state("open")]]
    md_bg_color: .3,.3,.3,1
    AnchorLayout:
      padding: 5
      anchor_x:"right"
      Button:
        id: btn_font_size
        text:"Font Size"
        size_hint:.5,1
        on_press: root.change_app_size()
        elevation:40
        # background_color: .3,.8,.3,1
        background_color: .3,.3,.3,1
        # color: 1,.2,.2,1
        border:15,15,15,15

  MDNavigationLayout:
    id:md_nav_layout

    ScreenManager:
      id:child_sm
      ActivityScreen:
        id: act_screen
        name: "act_screen"
        size_hint: 1,None
        height: root.height - root.toolbar.height
      Screen:
        id: table_screen
        name: "table_screen"
        size_hint: 1,None
        height: root.height - root.toolbar.height
        TableBox:
    MDNavigationDrawer:
      id:nav_drawer
      size_hint:.5, None
      height:root.height - root.toolbar.height
      on_motion: print(self.x)

      NavMenu:
        id: navmenu


<ActivityScreen@Screen>
  ScrollView:
    BoxLayout:
      orientation:"vertical"
      size_hint:1,None
      height:self.minimum_height

      MainBoxLayout:
        size_hint:1,None
        height:root.height

      BoxLayout:# ExtraBoxLayout
        size_hint:1,None
        height:root.height *.5



<NavMenu>
  list_item_activity: list_item_activity
  list_item_table: list_item_table

  box_table_screen_label: box_table_screen_label
  label_table_screen: label_table_screen

  orientation:"vertical"
  canvas.before:
    Color:
      rgb:127/255,160/255,189/255
    Rectangle:
      pos: self.pos
      size: self.size
  BoxLayout:
    id: box_table_screen_label
    canvas.before:
      Color:
        rgba:.1,.1,.1,.1
      Rectangle:
        pos: self.pos[0]+3,self.pos[1]
        size: self.width - 6, 2
    Label:
      id: label_table_screen
      text: "View Logged Activities"



  OneLineListItem:
    id: list_item_activity
    text: "Add Activity"
    on_press:
      root.parent.parent.parent.child_sm.current="act_screen"
  OneLineListItem:
    id: list_item_table
    text: "View Logged Activities"
    on_press:
      print('pressed Nav menu to enter table_screen  --------')
      ps2=root.parent.parent.parent
      ps2.child_sm.current="table_screen"
      ps2.table_box_util()# utility for sending data to table_box
  Label:

<TableBox>:
  id: box_table

  label_email_ts: label_email_ts
  anchor_email_ts: anchor_email_ts

  anchor_act_count: anchor_act_count
  label_act_count: label_act_count

  box_table_base: box_table_base
  anchor_header: anchor_header
  box_header: box_header
  btn_header_id: btn_header_id
  btn_header_date: btn_header_date
  btn_header_name: btn_header_name
  btn_header_count: btn_header_count
  grid_table: grid_table
  scroll_view: scroll_view

  box_table_nav: box_table_nav
  anchor_table_nav_label: anchor_table_nav_label
  label_table_nav: label_table_nav
  input_row: input_row
  btn_go_to_row: btn_go_to_row
  btn_top: btn_top
  btn_bottom: btn_bottom

  orientation:"vertical"

  AnchorLayout:#         Container for Email
    id: anchor_email_ts

    Label:
      id: label_email_ts
      color: .2,.2,.2,1
      # canvas.before:
      #   Color:
      #     rgb: [127/255,160/255,100/255]
      #   Rectangle:
      #     pos: self.pos
      #     size: self.size

  AnchorLayout:#         Container for Table Count
    id: anchor_act_count
    Label:
      id:label_act_count

  BoxLayout:#            Container for Table
    id: box_table_base
    orientation:"vertical"
    AnchorLayout:
      id: anchor_header

      BoxLayout:
        id: box_header
        Button:
          id: btn_header_id
        Button:
          id: btn_header_date
        Button:
          id: btn_header_name
        Button:
          id: btn_header_count

    ScrollView:
      id: scroll_view
      canvas.before:
        Color:
          rgb: [150/255,150/255,150/255]
        Rectangle:
          pos: self.pos
          size: self.size
      GridLayout:
        id: grid_table
        size_hint_y:None
        height:self.minimum_height
        cols:1

  BoxLayout:#            Container for Table Navigation
    id: box_table_nav
    orientation: "vertical"
    # canvas.before:
    #   Color:
    #     rgb: [.1,.1,.1,1]
    #   Rectangle:
    #     pos:self.x,self.top
    #     size: self.width, 10
    #   Color:
    #     rgb: [100/255,100/255,100/255]
    #   Rectangle:
    #     pos: self.pos
    #     size: self.size
    AnchorLayout:
      id: anchor_table_nav_label
      BoxLayout:

        Label:
          id: label_table_nav
        TextInput:
          id: input_row
        Button:
          id: btn_go_to_row
          on_press: root.jump_to_row_util()

    Button:
      id: btn_top
      on_press: scroll_view.scroll_y=1

    Button:
      id: btn_bottom
      on_press:
        scroll_view.scroll_y=0
        # root.super_wonder_button()



